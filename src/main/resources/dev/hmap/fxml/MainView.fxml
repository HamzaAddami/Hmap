<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="dev.hmap.controller.MainController"
            styleClass="main-container">

    <!-- Top Navigation Bar -->
    <top>
        <VBox styleClass="nav-container">
            <HBox spacing="0" styleClass="nav-bar">
                <VBox fx:id="hostDiscoveryTab" spacing="8" styleClass="nav-tab, tab-active" onMouseClicked="#handleHostDiscoveryTab">
                    <Label text="Host Discovery" styleClass="nav-tab-title"/>
                    <Label text="Scan networks and discover devices" styleClass="nav-tab-subtitle"/>
                </VBox>

                <VBox fx:id="portScannerTab" spacing="8" styleClass="nav-tab, tab-inactive" onMouseClicked="#handlePortScannerTab">
                    <Label text="Port Scanner" styleClass="nav-tab-title"/>
                    <Label text="Scan ports and services" styleClass="nav-tab-subtitle"/>
                </VBox>
            </HBox>

            <!-- Thread Stats Bar -->
            <HBox styleClass="thread-stats-bar" alignment="CENTER_LEFT">
                <padding><Insets top="8" right="15" bottom="8" left="15"/></padding>
                <Label text="âš™ Thread Pool Status: " styleClass="thread-stats-label"/>
                <Label fx:id="threadStatsLabel" text="Initializing..." styleClass="thread-stats-value"/>
            </HBox>
        </VBox>
    </top>

    <!-- Content Area -->
    <center>
        <StackPane fx:id="contentArea" styleClass="content-area"/>
    </center>

</BorderPane>